@page
@model HCAMiniEHR.Pages.LabOrders.EditModel
@{
    ViewData["Title"] = "Edit Lab Order";
}

<div class="container mt-4">
    <h1>Edit Lab Order #@Model.LabOrder.LabOrderId</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="LabOrder.LabOrderId" />
                <input type="hidden" asp-for="LabOrder.AppointmentId" />
                <input type="hidden" asp-for="LabOrder.OrderDate" />
                
                <div class="alert alert-info">
                    <strong>Patient:</strong> @Model.LabOrder.Appointment.Patient.FirstName @Model.LabOrder.Appointment.Patient.LastName<br/>
                    <strong>Appointment:</strong> @Model.LabOrder.Appointment.AppointmentDate.ToString("MM/dd/yyyy hh:mm tt")
                </div>
                
                <div class="mb-3">
                    <label asp-for="LabOrder.TestName" class="form-label">Test Name</label>
                    <input asp-for="LabOrder.TestName" class="form-control" readonly />
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="LabOrder.Status" class="form-label">Status</label>
                        <select asp-for="LabOrder.Status" class="form-control">
                            <option value="Pending">Pending</option>
                            <option value="InProgress">In Progress</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="LabOrder.CompletedDate" class="form-label">Completed Date (if applicable)</label>
                        <input asp-for="LabOrder.CompletedDate" type="datetime-local" class="form-control" />
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="LabOrder.Results" class="form-label">Test Results</label>
                    <textarea asp-for="LabOrder.Results" class="form-control" rows="4" 
                              placeholder="Enter lab test results here"></textarea>
                </div>
                  <div class="mb-3">
                    <label asp-for="LabOrder.Notes" class="form-label">Notes</label>
                    <textarea asp-for="LabOrder.Notes" class="form-control" rows="2"></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Update Lab Order</button>
                    <a href="/LabOrders" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
