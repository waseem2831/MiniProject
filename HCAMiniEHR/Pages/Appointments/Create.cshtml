@page
@model HCAMiniEHR.Pages.Appointments.CreateModel
@{
    ViewData["Title"] = "Schedule Appointment";
}

<div class="container mt-4">
    <h1>Schedule New Appointment</h1>

    <div class="card mt-4">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Appointment.PatientId" class="form-label">Patient</label>
                    <select asp-for="Appointment.PatientId" class="form-control" required>
                        <option value="0">-- Select Patient --</option>
                        @foreach (var patient in Model.Patients)
                        {
                            <option value="@patient.PatientId">@patient.FirstName @patient.LastName (DOB: @patient.DateOfBirth.ToString("MM/dd/yyyy"))</option>
                        }
                    </select>
                    <span asp-validation-for="Appointment.PatientId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Appointment.AppointmentDate" class="form-label">Appointment Date & Time</label>
                        <input asp-for="Appointment.AppointmentDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Appointment.AppointmentType" class="form-label">Appointment Type</label>
                        <select asp-for="Appointment.AppointmentType" class="form-control">
                            <option value="">-- Select Type --</option>
                            <option value="Checkup">Checkup</option>
                            <option value="Follow-up">Follow-up</option>
                            <option value="Emergency">Emergency</option>
                            <option value="Consultation">Consultation</option>
                        </select>
                        <span asp-validation-for="Appointment.AppointmentType" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Appointment.DoctorName" class="form-label">Doctor</label>
                        <select asp-for="Appointment.DoctorName" class="form-control">
                            <option value="">-- Select Doctor --</option>
                            <option value="Dr. Sarah Connor">Dr. Sarah Connor</option>
                            <option value="Dr. John McClane">Dr. John McClane</option>
                            <option value="Dr. Ellen Ripley">Dr. Ellen Ripley</option>
                            <option value="Dr. James Bond">Dr. James Bond</option>
                        </select>
                        <span asp-validation-for="Appointment.DoctorName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Appointment.Status" class="form-label">Status</label>
                        <select asp-for="Appointment.Status" class="form-control">
                            <option value="Scheduled">Scheduled</option>
                            <option value="Completed">Completed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Appointment.Notes" class="form-label">Notes</label>
                    <textarea asp-for="Appointment.Notes" class="form-control" rows="3"></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Schedule Appointment</button>
                    <a href="/Appointments" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}