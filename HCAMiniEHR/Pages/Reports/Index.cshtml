@page
@model HCAMiniEHR.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">
    <h1>LINQ Reports & Analytics</h1>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Available Reports</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/Reports?type=pending" class="list-group-item list-group-item-action @(Model.ReportType == "pending" ? "active" : "")">
                        Pending Lab Orders
                    </a>
                    <a href="/Reports?type=followup" class="list-group-item list-group-item-action @(Model.ReportType == "followup" ? "active" : "")">
                        Patients Without Follow-up
                    </a>
                    <a href="/Reports?type=doctor" class="list-group-item list-group-item-action @(Model.ReportType == "doctor" ? "active" : "")">
                        Doctor Productivity
                    </a>
                    <a href="/Reports?type=labsummary" class="list-group-item list-group-item-action @(Model.ReportType == "labsummary" ? "active" : "")">
                        Lab Test Summary
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4>@Model.ReportTitle</h4>
                </div>
                <div class="card-body">
                    @if (Model.ReportData.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    @if (Model.ReportType == "pending")
                                    {
                                        <tr>
                                            <th>Lab Order ID</th>
                                            <th>Patient</th>
                                            <th>Test Name</th>
                                            <th>Order Date</th>
                                            <th>Days Waiting</th>
                                            <th>Doctor</th>
                                            <th>Notes</th>
                                        </tr>
                                    }
                                    else if (Model.ReportType == "followup")
                                    {
                                        <tr>
                                            <th>Patient ID</th>
                                            <th>Patient Name</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                            <th>Last Appointment</th>
                                            <th>Days Since Visit</th>
                                        </tr>
                                    }
                                    else if (Model.ReportType == "doctor")
                                    {
                                        <tr>
                                            <th>Doctor Name</th>
                                            <th>Total</th>
                                            <th>Completed</th>
                                            <th>Scheduled</th>
                                            <th>Cancelled</th>
                                            <th>Lab Orders</th>
                                            <th>Last Appt</th>
                                            <th>Next Appt</th>
                                        </tr>
                                    }
                                    else if (Model.ReportType == "labsummary")
                                    {
                                        <tr>
                                            <th>Test Name</th>
                                            <th>Total Orders</th>
                                            <th>Pending</th>
                                            <th>In Progress</th>
                                            <th>Completed</th>
                                            <th>Avg Days to Complete</th>
                                        </tr>
                                    }
                                </thead>
                                <tbody>
                                    @foreach (dynamic row in Model.ReportData)
                                    {
                                        <tr>
                                            @if (Model.ReportType == "pending")
                                            {
                                                <td>@row.LabOrderId</td>
                                                <td>@row.PatientName</td>
                                                <td>@row.TestName</td>
                                                <td>@((DateTime)row.OrderDate).ToString("MM/dd/yyyy")</td>
                                                <td><span class="badge bg-warning">@row.DaysWaiting days</span></td>
                                                <td>@row.DoctorName</td>
                                                <td>@row.Notes</td>
                                            }
                                            else if (Model.ReportType == "followup")
                                            {
                                                <td>@row.PatientId</td>
                                                <td>@row.PatientName</td>
                                                <td>@row.PhoneNumber</td>
                                                <td>@row.Email</td>
                                                <td>@(row.LastAppointment != null ? ((DateTime)row.LastAppointment).ToString("MM/dd/yyyy") : "Never")</td>
                                                <td>@(row.DaysSinceLastVisit != null ? row.DaysSinceLastVisit + " days" : "N/A")</td>
                                            }
                                            else if (Model.ReportType == "doctor")
                                            {
                                                <td><strong>@row.DoctorName</strong></td>
                                                <td>@row.TotalAppointments</td>
                                                <td>@row.CompletedAppointments</td>
                                                <td>@row.ScheduledAppointments</td>
                                                <td>@row.CancelledAppointments</td>
                                                <td>@row.LabOrdersGenerated</td>
                                                <td>
                                                    @(row.LastAppointmentDate != null
                                                                                            ? DateTime.Parse(row.LastAppointmentDate.ToString()).ToString("MM/dd/yyyy")
                                                                                            : "N/A")
                                                </td>

                                                <td>@(row.NextAppointmentDate != null ? ((DateTime)row.NextAppointmentDate).ToString("MM/dd/yyyy") : "None")</td>
                                            }
                                            else if (Model.ReportType == "labsummary")
                                            {
                                                <td>@row.TestName</td>
                                                <td>@row.TotalOrders</td>
                                                <td>@row.PendingOrders</td>
                                                <td>@row.InProgressOrders</td>
                                                <td>@row.CompletedOrders</td>
                                                <td>@(row.AverageCompletionDays != null ? Math.Round(row.AverageCompletionDays, 1) + " days" : "N/A")</td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">@(string.IsNullOrEmpty(Model.ReportType) ? "Please select a report from the menu." : "No data available for this report.")</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>