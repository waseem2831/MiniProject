                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@appt.AppointmentType</h6>
                                        <small><span class="@statusBadge">@appt.Status</span></small>
                                    </div>
                                    <p class="mb-1">
                                        <strong>Date:</strong> @appt.AppointmentDate.ToString("MM/dd/yyyy hh:mm tt")<br />
                                        <strong>Doctor:</strong> @appt.DoctorName
                                    </p>
                                    @if (!string.IsNullOrEmpty(appt.Notes))
                                    {
                                        <small class="text-muted">@appt.Notes</small>
                                    }
                                    <div class="mt-2">
                                        <a href="/Appointments/Details?id=@appt.AppointmentId" class="btn btn-sm btn-outline-info">View Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.Appointments.Count > 5)
                        {
                            <p class="text-muted mt-2 mb-0">Showing 5 most recent appointments</p>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No appointments scheduled yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
